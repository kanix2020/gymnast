<%= form_with model:@game, local: true do |f| %>
    <div class="mt-4 d-flex justify-content-center">
        <br>
        <h2>大会データ登録</h2>
        <br>
    </div>
    <div class="justify-content-center">
        <%= render 'shared/error_messages', model: f.object %>
    </div>
    <div class="row justify-content-center">
        <div class="mt-3 col-7 col-lg-6 col-xl-6">
                <label>開催日</label>
                <div class="form-group d-flex">
                        <%= raw sprintf(
                        f.date_select(
                            :event_day,
                            # id:"birth-date",
                            use_month_numbers: true,
                            prompt:'--',
                            start_year: 1930,
                            end_year: (Time.now.year - 5),
                            date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                </div>
                <label>大会名</label>
                <div class="form-group">
                    <%= f.text_area :name, class:"form-control", id:"athlete-name", placeholder:"第◯◯回全日本学生体操競技選手権大会" %>
                </div>
                <label>会場名</label>
                <div class="form-group">
                    <%= f.text_area :venue, class:"form-control", id:"athlete-name", placeholder:"◯◯総合体育館" %>
                </div>
                <label>都道府県</label>
                <div class="form-group">
                    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"form-control"}) %>
                </div>
            </div>
        </div>
        <div class="row mt-3 center-block text-center justify-content-center">
       
            <div class="col-2">
                <%=link_to 'もどる', root_path, class:"btn btn-outline-primary btn-block" %>
            </div>
            <div class="col-2">
                 <%= f.submit "新規登録" ,class:"btn btn-outline-primary btn-block" %>
            </div>
        </div>
    </div>
<% end %>